package kosa.mission;

import java.util.Scanner;

public class Mission02 {

	public static void main(String[] args) {
		// 성적관리 구현
		//국어, 영어, 수학 점수를 키보드로부터 입력 받고
		// 총점과 평균을 출력하세요. (단 평균은 실수형)
		Scanner sc = new Scanner(System.in);
//		String str=sc.nextLine();
		
		System.out.print("국어: ");
		int kor = Integer.parseInt(sc.nextLine());
		System.out.print("영어: ");
		int eng = Integer.parseInt(sc.nextLine());
		System.out.print("수학: ");
		int math = Integer.parseInt(sc.nextLine());
		
		int all = kor + eng+ math;
		System.out.println("총점은 " + all + "입니다.");
//		int sev = all/3; //정수값만 전달
//		double sev = all/3.0; //double 실수형 
		int sev = (int) (all/3.0); //정수값만 전달
		
		System.out.println("평균은 " + sev + "입니다.");
		
		

	}

}
